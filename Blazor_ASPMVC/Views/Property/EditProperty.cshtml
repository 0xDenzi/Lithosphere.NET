@model Blazor_ASPMVC.Models.PropertyDetailsViewModel

@{
    ViewData["Title"] = "Edit Property";
}

<h1>Edit Property</h1>

<form asp-action="EditProperty" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PropertyID" />

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Beds"></label>
        <input asp-for="Beds" class="form-control" />
        <span asp-validation-for="Beds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Baths"></label>
        <input asp-for="Baths" class="form-control" />
        <span asp-validation-for="Baths" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Area"></label>
        <input asp-for="Area" class="form-control" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Parking"></label>
        <select asp-for="Parking" asp-items="Html.GetEnumSelectList<Blazor_ASPMVC.Models.TypeofParking>()" class="form-control"></select>
        <span asp-validation-for="Parking" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PropertyType"></label>
        <select asp-for="PropertyType" asp-items="Html.GetEnumSelectList<Blazor_ASPMVC.Models.TypesofProperty>()" class="form-control"></select>
        <span asp-validation-for="PropertyType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PropertyStatus"></label>
        <select asp-for="PropertyStatus" asp-items="Html.GetEnumSelectList<Blazor_ASPMVC.Models.StatusofProperty>()" class="form-control"></select>
        <span asp-validation-for="PropertyStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="ManageProperties" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
